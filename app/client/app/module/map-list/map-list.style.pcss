.map-list-item {
  user-select: none;
  padding: 0 0.5em;
  width: 100%;
  display: flex;
  gap: 0.5em;
  align-items: center;
  background: #efefef;
  box-sizing: border-box;
  border-radius: 3px;

  .icon {
    margin: 5px 0;
    padding: 3px;
    display: flex;
    background: #fff;
    border-radius: 3px;
  }

  svg {
    width: 24px;
    height: 24px;
    color: #000;
  }

  label {
    display: flex;
    padding: 5px 0;
  }

  span {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50px;
    padding: 0 4px;
    background: #fdfdfd;
    border-radius: 3px;
  }

  ul {
    margin: 5px 5px 5px 0;
    padding: 0;
    width: 100%;
    list-style: none;
    display: grid;
    gap: 0.5em;
    grid-template-columns: 60px 60px;

    li {
      padding: 0 4px;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 3px;
    }
  }
}

.color {
  display: flex;
  width: 18px;
  height: 18px;
  border-radius: 100%;
  background: #fff;
  flex-shrink: 0;
}

.checkbox-select {
  cursor: pointer;
  position: relative;

  input {
    width: 24px;
    height: 24px;
    visibility: hidden;
  }

  &::after {
    top: calc(50% - 15px);
    left: 6px;
    width: 30px;
    height: 30px;
    content: '';
    position: absolute;
    display: block;
    border-radius: 3px;
    background-size: 24px;
    background-color: #fff;
    background-position: center;
    background-repeat: no-repeat;
    background-image: url("data:image/svg+xml;base64,");
  }

  &:has(input:checked) {
    &::after {
      background-image: url("data:image/svg+xml;base64,");
    }
  }
}

